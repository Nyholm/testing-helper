{
    "name"       : "narrowspark/testing-helper",
    "type"       : "library",
    "description": "Provides test helpers.",
    "keywords"   : [
        "phpunit", "mockery", "mock"
    ],
    "license"    : "MIT",
    "homepage"   : "https://github.com/narrowspark/testing-helper",
    "support"    : {
        "issues"      : "https://github.com/narrowspark/testing-helper/issues",
        "source"      : "https://github.com/narrowspark/testing-helper"
    },
    "authors"    : [
        {
            "name"    : "Daniel Bannert",
            "email"   : "d.bannert@anolilab.de",
            "homepage": "http://anolilab.de",
            "role"    : "Developer"
        }
    ],
    "require": {
        "php"                                     : ">=5.6.4",
        "container-interop/container-interop"     : "~1.1"
    },
    "require-dev": {
        "fzaninotto/faker"                        : "~1.5",
        "phpunit/phpunit"                         : "~5.1.3",
        "mockery/mockery"                         : "~0.9.4",
        "narrowspark/php-cs-fixer-config"         : "~1.1.5",
        "roave/security-advisories"               : "dev-master"
    },
    "autoload": {
        "psr-4": {
            "Narrowspark\\TestingHelper\\"        : "src/TestingHelper/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Narrowspark\\TestingHelper\\Tests\\" : "tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master"                          : "1.1-dev"
        }
    },
    "suggest": {
        "fzaninotto/faker"                        : "Required to use the FakerTrait (~1.5)",
        "mockery/mockery"                         : "Required to use the MockeryTrait (~0.9.4)",
        "skagarwal/reflection"                    : "Required to test your private/protected methods/properties (~1.0.5)"
    },
    "minimum-stability"                           : "dev",
    "prefer-stable"                               : true
}
